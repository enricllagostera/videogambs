      p(@animation.window="y = Math.sin($event.detail.elapsed*0.01) * -2.5 -5") #[strong DSPV] is a tool for making videogambs. #[span(style="display:inline-block;transform:scale(1, 1) rotateZ(8deg) translateX(3px);") ðŸ¦µ] #[span(:style="`display:inline-block;transform:scale(2, 2) translateY(${y}px);`") ðŸ“¼] #[span(style="display:inline-block;transform:scale(-1, 1) rotateZ(8deg) translateX(3px);") ðŸ¦µ]
      script.
        let last_frame = 0;

        function step(elapsed){
          let delta = elapsed - last_frame;
          if(delta >= 50){
            last_frame = elapsed;
            //- console.log(elapsed, delta)
            window.dispatchEvent(new CustomEvent('animation', {detail: {delta: delta, elapsed: elapsed}}))
          }
          window.requestAnimationFrame(step);
        }

        window.requestAnimationFrame(step)

